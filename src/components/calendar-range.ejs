<%
  const localsSafe = locals || {};
  const id = localsSafe.id || 'cal-' + Math.random().toString(36).substring(2, 9);
  const title = localsSafe.title || '';  
  const ariaLabel = localsSafe.ariaLabel || '기간';
  const placeholder = localsSafe.placeholder || 'YYYY.MM.DD';
  const value = localsSafe.value || '';
  const size = localsSafe.size || 'large';
  const groupClass = localsSafe.groupClass || '';
  const inputClass = localsSafe.inputClass || '';
  const error = localsSafe.error || null;
  const disabled = localsSafe.disabled || false;
  const readonly = localsSafe.readonly || false;

  const formGroupClasses = [
    'form-group',
    groupClass,
    error ? 'is-error' : '',
    disabled ? 'disabled' : '',
    readonly ? 'readonly' : ''
  ].filter(Boolean).join(' ');

  const inputClasses = [
    'calendar',
    'input',
    size,
    inputClass
  ].filter(Boolean).join(' ');
-%>
<% if (title) { -%>
<div class="<%= formGroupClasses %>">
  <div class="form-tit">
    <span><%= title %></span>
  </div>
  <div class="form-conts">
<% } -%>
    <div class="input-group calendar-group">
      <div class="<%= inputClasses %>">
        <button type="button" class="btn icon form-btn-datepicker" aria-expanded="false" <% if (disabled) { %>disabled<% } %>>
          <span class="sr-only">달력 열기</span>
          <i class="svg-icon icon-calendar"></i>
        </button>
        <input 
          type="text" 
          class="datepicker cal" 
          placeholder="<%= placeholder %>" 
          id="<%= id %>-start" 
          value="<%= value %>"
          aria-label="<%= ariaLabel %> 시작일"
          <% if (disabled) { %>disabled<% } %>
          <% if (readonly) { %>readonly<% } %>
        />
      </div>

      <div class="<%= inputClasses %>">
        <button type="button" class="btn icon form-btn-datepicker" aria-expanded="false" <% if (disabled) { %>disabled<% } %>>
          <span class="sr-only">달력 열기</span>
          <i class="svg-icon icon-calendar"></i>
        </button>
        <input 
          type="text" 
          class="datepicker cal" 
          placeholder="<%= placeholder %>" 
          id="<%= id %>-end" 
          value="<%= value %>"
          aria-label="<%= ariaLabel %> 종료일"
          <% if (disabled) { %>disabled<% } %>
          <% if (readonly) { %>readonly<% } %>
        />
      </div>
    </div>
    <% if (error) { -%>
    <p class="form-error-msg"><%= error %></p>
    <% } -%>
<% if (title) { -%>
  </div>
</div>
<% } -%>