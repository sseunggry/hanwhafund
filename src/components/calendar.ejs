<%
  const localsSafe = locals || {};
  const id = localsSafe.id || 'cal-' + Math.random().toString(36).substring(2, 9);
  const title = localsSafe.title || '';   //title이 없으면 ariaLabel 넣어줘야 함
  const ariaLabel = localsSafe.ariaLabel || '';
  const placeholder = localsSafe.placeholder || 'YYYY.MM.DD';
  const value = localsSafe.value || '';
  const size = localsSafe.size || 'large';
  const groupClass = localsSafe.groupClass || '';
  const inputClass = localsSafe.inputClass || '';
  // const isSingle = localsSafe.isSingle || false;
  // const position = localsSafe.position || 'bottom';
  const error = localsSafe.error || null;
  const disabled = localsSafe.disabled || false;
  const readonly = localsSafe.readonly || false;

  const formGroupClasses = [
    'form-group',
    groupClass,
    error ? 'is-error' : '',
    disabled ? 'disabled' : '',
    readonly ? 'readonly' : ''
  ].filter(Boolean).join(' ');

  const inputClasses = [
    'calendar',
    'input',
    size,
    inputClass
  ].filter(Boolean).join(' ');
-%>
<% if (title) { -%>
<div class="<%= formGroupClasses %>">
  <div class="form-tit">
    <label for="<%= id %>"><%= title %></label>
  </div>
  <div class="form-conts">
<% } -%>
    <div class="<%= inputClasses %>">
      <button type="button" class="btn icon form-btn-datepicker" aria-expanded="false">
        <span class="sr-only">달력 열기</span>
        <i class="svg-icon ico-calendar"></i>
      </button>
      <input 
        type="text" 
        class="datepicker cal" 
        placeholder="<%= placeholder %>" 
        id="<%= id %>" 
        value="<%= value %>"
        <% if (!title && ariaLabel) { %>
          aria-label="<%= ariaLabel %>"
        <% } %>
        <% if (disabled) { %>disabled<% } %>
        <% if (readonly) { %>readonly<% } %>
      />
    </div>
    <% if (error) { -%>
    <p class="form-error-msg"><%= error %></p>
    <% } -%>
<% if (title) { -%>
  </div>
</div>
<% } -%>