<%
  const localsSafe = locals || {};
  const badgeItems = localsSafe.badgeItems;
  const size = localsSafe.size || '';
-%>
<%_ if (Array.isArray(badgeItems) && badgeItems.length > 0) { -%>
<div class="badge-wrap">
<%_ badgeItems.forEach(item => { -%>
  <%_
    const variant = item.variant || 'solid';
    const color = item.color || 'primary';
    const label = item.label || 'badge';
    // const size = item.size || 'medium'; // size가 필요하다면 이 주석을 해제
    const classes = [
      `badge`,
      variant === 'solid' ? `${color}` : `${variant}-${color}`,
      size,
    ].filter(Boolean).join(' ');
  -%>
  <span class="<%= classes %>"><%= label %></span>
<%_ }); -%>
</div>
<%_ } else { -%>
<%
  const variant = localsSafe.variant || 'solid'; // outline, solid, solid-pastel
  const color = localsSafe.color || 'primary'; // primary, secondary, tertiary
  const label = localsSafe.label || 'badge';
  // const size = localsSafe.size || 'medium';
  const classes = [
    `badge`,
    variant === 'solid' ? `${color}` : `${variant}-${color}`,
    size,
  ].filter(Boolean).join(' ');
-%>
<span class="<%= classes %>"><%= label %></span>
<%_ } -%>