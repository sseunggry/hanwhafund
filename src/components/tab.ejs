<%
  const localsSafe = locals || {};
  const active = Number(localsSafe.active) || 0; // 활성 탭 인덱스 (기본값: 0)
  const variant = localsSafe.variant || 'line'; // 탭 스타일 (기본값: line)
	const full = localsSafe.full ? 'full' : ''; // 전체 너비 여부
  const tablist = Array.isArray(localsSafe.tablist) ? localsSafe.tablist : ['기본 탭']; // 탭 레이블 배열
  const contents = Array.isArray(localsSafe.contents) ? localsSafe.contents : ['기본 콘텐츠']; // 탭 콘텐츠 배열
  const addClass = localsSafe.addClass || ''; // 추가 클래스
	const classes = [
		variant,
		full,
    addClass
  ].filter(Boolean).join(' ');

	const id = localsSafe.id ? `tab-${localsSafe.id}` : 'tab';
-%>
<div class="tab-area">
  <div class="tab <%= classes %>">
    <ul role="tablist">
      <% tablist.forEach(function(label, idx) { -%>
        <li 
          id="<%= id %>-tab-<%= idx + 1 %>" 
          role="tab" 
          aria-controls="<%= id %>-panel-<%= idx + 1 %>" 
          <%- active === idx ? `class="active" aria-selected="true"` : `aria-selected="false"` %>
        >
          <button type="button" class="btn-tab">
            <%= label %><%- active === idx ? '<span class="sr-only">선택됨</span>' : '' -%>
          </button>
        </li>
      <% }) -%>
    </ul>
  </div>
  <div class="tab-conts-wrap">
    <% tablist.forEach(function(label, idx) { -%>
      <div 
        id="<%= id %>-panel-<%= idx + 1 %>" 
        class="tab-conts <%= active === idx ? 'active' : '' %>" 
        role="tabpanel" 
        aria-labelledby="<%= id %>-tab-<%= idx + 1 %>"
      >
        <%- contents[idx] || '콘텐츠 없음' %>
      </div>
    <% }); -%>
  </div>
</div>