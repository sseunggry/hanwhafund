<%
  const localsSafe = locals || {};
  const variant = localsSafe.variant || 'box'; // box, text
  const size = localsSafe.size || ''; // medium, large
	const tagList = Array.isArray(localsSafe.tagList) ? localsSafe.tagList : ['태그'];
	const addClass = localsSafe.addClass || '';
	const classes = [
    `tag-wrap`,
		variant !== 'box' ? variant : '',
    size,
		addClass
  ].filter(Boolean).join(' ');
-%>
<div class="<%= classes %>">
	<% tagList.forEach(function(label, idx) { -%>
		<a href="#!" class="btn-tag"><%= label %></a>
	<% }) -%>
</div>