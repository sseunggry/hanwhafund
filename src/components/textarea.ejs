<%
  const localsSafe = locals || {};
  const title = localsSafe.title || ''; // Form Group 제목 (label 텍스트)
  const size = localsSafe.size || '';
  const placeholder = localsSafe.placeholder || '';
  const value = localsSafe.value || '';
  const name = localsSafe.name || '';
  const required = localsSafe.required || false;
  const disabled = localsSafe.disabled || false;
  const readonly = localsSafe.readonly || false;
  const maxlength = localsSafe.maxlength || null; // 최대 글자 수
  const showCount = localsSafe.showCount !== false && maxlength; // maxlength 있을 때 기본으로 카운트 표시
  const rows = localsSafe.rows || null; // textarea rows 속성
  const formGroupAddClass = localsSafe.formGroupAddClass || ''; // form-group 추가 클래스
  const addClass = localsSafe.addClass || ''; // textarea-wrap 추가 클래스

  const id = localsSafe.id ? `textarea-${localsSafe.id}` : 'textarea';

  const wrapClasses = [
    'textarea-wrap', // 기본 textarea 래퍼
    size,
    addClass,
    disabled ? 'disabled' : '',
    readonly ? 'readonly' : ''
  ].filter(Boolean).join(' ');

  const textareaClasses = [
     `input`, // input과 유사한 스타일 적용 위해
     size
  ].filter(Boolean).join(' ');

  const formGroupClasses = [
		'form-group', 
		formGroupAddClass,
		disabled ? 'disabled' : '', 
		readonly ? 'readonly' : '' 
	].filter(Boolean).join(' ');
-%>
<% if (title) { -%>
<div class="<%= formGroupClasses %>">
  <div class="form-tit"><label for="<%= id %>"><%= title %><%- required ? '<small class="required">*</small>' : '' %></label></div>
  <div class="form-conts">
<% } -%>
    <div class="<%= wrapClasses %>">
      <textarea
        id="<%= id %>"
        class="<%= textareaClasses %>"
        name="<%= name %>"
        placeholder="<%= placeholder %>"
        <%= maxlength ? `maxlength="${maxlength}"` : '' %>
        <%= rows ? `rows="${rows}"` : '' %>
        <%= required ? 'required' : '' %>
        <%= disabled ? 'disabled' : '' %>
        <%= readonly ? 'readonly' : '' %>
      ><%= value %></textarea>

      <% if (showCount) { -%>
        <p class="textarea-count">
          <span class="count-now"><%= value.length %></span>
          <span class="count-total">/<%= maxlength %></span>
        </p>
      <% } -%>
    </div>
<% if (title) { -%>
  </div>
</div>
<% } -%>