<%
  const localsSafe = locals || {};
  const caption = localsSafe.captionTitle || ''; 
  const thead = Array.isArray(localsSafe.thead) ? localsSafe.thead : [];
  const tbody = Array.isArray(localsSafe.tbody) ? localsSafe.tbody : [];
  const addClass = localsSafe.addClass || '';
  const colWidths = Array.isArray(localsSafe.colWidths) ? localsSafe.colWidths : [];
  const rowHeaders = localsSafe.rowHeaders === true;
  const captionSummary = thead.map(h => (typeof h === 'object' && h !== null) ? h.text : h).join(', ');
	const colAligns = Array.isArray(localsSafe.colAligns) ? localsSafe.colAligns : [];
	const infoTxt = localsSafe.infoTxt || '';
	const slot = localsSafe.slot || '';
	
  let colCount = 0;
  if (colWidths.length > 0) {
    colCount = colWidths.length;
  } else if (thead.length > 0) {
     thead.forEach(h => {
        if (typeof h === 'object' && h.colspan) {
            colCount += h.colspan;
        } else {
            colCount++;
        }
     });
  } else if (tbody.length > 0) {
    colCount = tbody[0].length;
  }

  const wrapClasses = [
    'tbl-wrap', // 기본 래퍼 클래스
    addClass
  ].filter(Boolean).join(' ');
-%>
<% if (colCount > 0 || tbody.length > 0) { -%>
<div class="<%= wrapClasses %>">
	<% if (infoTxt) { -%><p class="tbl-info"><%- infoTxt %></p><% } -%>
  <table class="tbl">
    <caption>
      <% if (caption) { -%><strong><%- caption %></strong><% } -%>
      <span><%- captionSummary %>로 구성된 표</span>
    </caption>
    <colgroup>
      <% for (let i = 0; i < colCount; i++) { -%>
        <% if (colWidths[i]) { -%>
          <col style="width: <%= colWidths[i] %>;" />
        <% } else { -%>
          <col />
        <% } -%>
      <% } -%>
    </colgroup>
    <% if (thead.length > 0) { -%>
    <thead>
      <tr>
        <% thead.forEach((header) => { -%>
				<%
					let hText = '';
					let hAttrs = '';
					
					if (typeof header === 'object' && header !== null) {
						hText = header.text || '';
						if (header.colspan) hAttrs += ` colspan="${header.colspan}"`;
						if (header.rowspan) hAttrs += ` rowspan="${header.rowspan}"`;
						if (header.class) hAttrs += ` class="${header.class}"`;
					} else {
						hText = header;
					}
				-%>
        <th scope="col"<%- hAttrs %>><%- hText %></th>
        <% }); -%>
      </tr>
    </thead>
    <% } -%>
    <% if (tbody.length > 0) { -%>
    <tbody>
      <% tbody.forEach(row => { -%>
			<%
        let rowCells = row; 
        let trClass = ''; 

        if (!Array.isArray(row) && typeof row === 'object' && row !== null) {
          rowCells = row.data || [];
          trClass = row.className || '';
        }
      -%>
			<tr<% if (trClass) { %> class="<%= trClass %>"<% } %>>
			<% rowCells.forEach((cellData, index) => { -%>
      <% 
        if (cellData === null) return;

        let cellText = '';
        let cellAttrs = '';
        let cellClassList = [];
        if (colAligns[index]) {
          cellClassList.push(`txt-${colAligns[index]}`);
        }

        if (typeof cellData === 'object' && cellData !== null) {
          cellText = cellData.text || '';
          if (cellData.rowspan) cellAttrs += ` rowspan="${cellData.rowspan}"`;
          if (cellData.colspan) cellAttrs += ` colspan="${cellData.colspan}"`;
          if (cellData.align) {
						cellClassList = cellClassList.filter(c => !c.startsWith('txt-'));
						cellClassList.push(`txt-${cellData.align}`);
          }
					if (cellData.class) {
             cellClassList.push(cellData.class);
          }
        } else {
          cellText = cellData;
        }
        
        const classAttr = cellClassList.length > 0 ? `class="${cellClassList.join(' ')}"` : '';
				const finalAttrs = (cellAttrs + ' ' + classAttr).trim();
      -%>
			<% if (cellData !== null) { -%>
      <% if (index === 0 && rowHeaders) { -%>
        <th scope="row" <%- finalAttrs %>><%- cellText %></th>
      <% } else { -%>
        <td <%- finalAttrs %>><%- cellText %></td>
      <% } -%>
      <% } -%>
      <% }) -%>
      </tr>
      <% }) -%>
    </tbody>
    <% } -%>
  </table>
	<% if (slot) { -%><%- slot %><% } -%>
</div>
<% } -%>